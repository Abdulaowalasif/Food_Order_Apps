<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#ffff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.DetailsActivity">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#35CDF3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        android:layout_margin="10dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/detailsImageViewId"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/chickenfry"
                android:scaleType="fitXY"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/detailsFoodNameID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food Name"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"/>
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="@drawable/quantity_back"
                    android:padding="5dp"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/detailsSubscriptId"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/minus" />

                    <TextView
                        android:id="@+id/DetailsQuantityId"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/DetailsAddId"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/plus" />

                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/DetailsDescriptionId"
                android:padding="10dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:gravity="center"/>
            <EditText
                android:id="@+id/DetailsNameId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:hint="Name"
                android:textColor="@color/black"
                android:paddingStart="10dp"
                android:layout_margin="10dp"
                android:background="@drawable/edt_txt_back"
                />
            <EditText
                android:paddingStart="10dp"
                android:id="@+id/DetailsPhoneId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="phone"

                android:textColor="@color/black"
                android:hint="Phone"
                android:layout_margin="10dp"
                android:background="@drawable/edt_txt_back"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:textColor="#FF0000"
                    android:textSize="17sp"
                    />
                <TextView
                    android:id="@+id/DetailsPriceId"
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textColor="#FF0000"
                    android:textSize="17sp"
                    />

            </LinearLayout>
            <Button
                android:id="@+id/DetailsOrderBtnId"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:background="@drawable/button_back"
                android:text="Order Now"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>